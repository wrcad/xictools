#######################################################################
LOCATION = xt_base
#######################################################################

DATE = @DATE@
MALLOC = @MALLOC@
REGEX = @REGEX@

ifdef MALLOC
MALLOC_DIR = malloc
endif

ifdef REGEX
REGEX_DIR = regex
endif

SUBDIRS = \
  miscutil \
  ginterf \
  gtkinterf \
  util \
  $(MALLOC_DIR) \
  $(REGEX_DIR)

all: 
	@if [ ! -d lib ]; then \
	    mkdir lib; \
	fi
	@for a in $(SUBDIRS); do \
	    if [ -d $$a ]; then \
	        (cd $$a; $(MAKE)) \
	    fi; \
	done
	
depend clean:
	-@for a in $(SUBDIRS); do \
	    if [ -d $$a ]; then \
	        (cd $$a; $(MAKE) $@) \
	    fi; \
	done

distclean:
	-@for a in $(SUBDIRS) packages; do \
	    if [ -d $$a ]; then \
	        (cd $$a; $(MAKE) $@) \
	    fi; \
	done
	-@rm -f config.cache config.log config.status configure Makefile
	-@rm -rf lib autom4te.cache
	-@rm -f include/config.h

