#######################################################################
LOCATION = xic/src/parser
#######################################################################

GFX_VERSION = @GFX_VERSION@
DATE = @DATE@

CXX = @CXX@
CC = @CC@
CFLAGS = @CFLAGSG@ @NEEDINT64@ @UFLAGS@
DEPEND_PROG = @DEPEND_PROG@ @CFLAGSG@ @NEEDINT64@
AR = @AR@
RANLIB = @RANLIB@
FILTER = @FILTER@

LIB_TARGET = parser.a

BASE = ../../../xt_base
INCLUDE = -I../../include -I$(BASE)/include

HFILES =
CCFILES = \
  funcs_lexpr.cc funcs_math.cc python_if.cc si_daemon.cc si_debug.cc \
  si_handle.cc si_interp.cc si_lexpr.cc si_lisp.cc si_lspec.cc \
  si_macro.cc si_parsenode.cc si_parser.cc si_spt.cc si_support.cc \
  si_variable.cc tcltk_if.cc
EXPOBJS = $(CCFILES_EXPORT:.cc=.o)

CCOBJS = $(CCFILES:.cc=.o)

$(LIB_TARGET): $(CCOBJS)
	@if [ -f $(LIB_TARGET) ]; then \
	    rm -f $(LIB_TARGET); \
	fi
	$(AR) cr $(LIB_TARGET) $(CCOBJS)
	$(RANLIB) $(LIB_TARGET)

.cc.o:
	$(CXX) $(CFLAGS) $(INCLUDE) -c $*.cc

depend:
	@echo depending in $(LOCATION)
	@if [ x$(DEPEND_DONE) = x ]; then \
	    echo DEPEND_DONE = 1 >> Makefile; \
	    $(DEPEND_PROG) $(INCLUDE) $(CCFILES) $(FILTER) >> Makefile; \
	fi

clean:
	-@rm -f *.o $(LIB_TARGET)

distclean: clean
	-@rm -f Makefile

#######################################################################
